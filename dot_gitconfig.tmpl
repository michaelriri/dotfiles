[core]
longpaths = true
symlinks = true
ignorecase = false
pager = less -X -F
[filter "lfs"]
required = true
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
[push]
autoSetupRemote = true
[alias]
lg = log --abbrev-commit --decorate --pretty=format:'%C(yellow)%<(8)%h%C(reset) %C(italic dim white)%<(15,trunc)%ar %C(reset) %C(bold green)%(decorate:prefix=,suffix= )%C(reset)%C(white)%s%C(reset)' -20 
branch-clean = !git fetch --prune && git branch -vv | grep ': gone]' | awk '{print $1}' | xargs -r git branch -D
delete-tag = "!f() { git tag -d \"$1\" && git push origin \":refs/tags/$1\"; }; f"
[user]
name = "Michael Rios"
email = {{ .email | quote }}
[pull]
ff = only
[column]
branch = auto
[branch]
sort = -committerdate
